@model IEnumerable<SchoolWebApp.Models.Teacher>

@{
    ViewData["Title"] = "All Teachers";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Employee #</th>
            <th>Salary</th>
            <th>Hire Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.TeacherFname</td>
                <td>@teacher.TeacherLname</td>
                <td>@teacher.EmployeeNumber</td>
                <td>@teacher.Salary?.ToString()</td>
                <td>@teacher.HireDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-controller="TeacherPage" asp-action="Show" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-primary">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
